{
  "extends": ["next/core-web-vitals"],
  "rules": {
    // React/Next.js rules
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "@next/next/no-img-element": "error",

    // General code quality
    "prefer-const": "error",
    "no-var": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  }
}
